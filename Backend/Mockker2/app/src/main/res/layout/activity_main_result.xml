<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/buttonbg"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="20sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_margin="10dp"
        android:backgroundTint="@color/itembg"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Score: 0%"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/score"
                android:layout_marginBottom="8dp"
                android:text="Total Questions: 0"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/correctA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalQ"
                android:layout_marginBottom="8dp"
                android:text="Correct Answers: 0"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wrongA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/correctA"
                android:layout_marginBottom="8dp"
                android:text="Wrong Answers: 0"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrongA"
                android:layout_marginBottom="8dp"
                android:text="Not Attempted: 0"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/answerKey"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@id/notA"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/buttonbg"
                android:text="Response Sheet ?"
                android:textColor="@color/buttonText" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:indeterminateTint="@color/progressbar"
                android:indeterminateTintMode="src_in"
                android:layout_below="@+id/notA"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
